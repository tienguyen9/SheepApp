<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/trip_parent_layout">

    <TextView
        android:id="@+id/tv_trip_id"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginVertical="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_trip_datetime"
        android:layout_width="284dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/tv_trip_id"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@id/tv_trip_id"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_trip_map"
        android:layout_width="283dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_trip_datetime"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@id/tv_trip_id"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="18sp" />

</RelativeLayout>
